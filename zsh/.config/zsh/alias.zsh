# Replace applications
alias cat="bat"
alias diff="delta"
alias dir="ls"
alias find="fd"
alias grep="rg --no-ignore --hidden --pcre2"
alias ls="lsd --long"
alias tree="ls --tree"
alias docker="podman"
alias docker-compose="podman-compose"

# Ask confirmation
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

