[user]
    name = {{username}}
    email = {{email}}
    signingkey = {{email}}

[include]
    path = ~/.config/delta/config

[alias]
    amend = commit --amend
    log-pretty = log --graph --pretty=log

[commit]
    gpgsign = true
    template = ~/.config/git/commit.template.txt

[core]
    autocrlf = input
    editor = nvim
    eol = lf
    excludefile = ~/.config/git/ignore
    pager = delta

[diff]
    algorithm = histogram
    submodule = log
    tool = nvimdiff

[fetch]
    fsckobjects = true

[init]
    defaultBranch = main

[log]
    date = iso-local

[merge]
    conflictstyle = zdiff3
    tool = nvimdiff

[pretty]
    log = %Cred%h%Creset - %C(yellow)%ai%Creset -%C(auto)%d%Creset %s %C(bold blue)<%an>%Creset

[push]
    autoSetupRemote = true

[receive]
    fsckobjects = true

[status]
    submoduleSummary = true

[submodule]
    recurse = true

[transfer]
    fsckobjects = true

[url "git@github.com:"]
    insteadOf = gh:
